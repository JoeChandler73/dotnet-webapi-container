{
    "name": "DotNet Web Api",
    "dockerFile": "Dockerfile",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "./features/kubectl-k9s": {
        },
        "./features/starship-nerd-font": {
            "nerdFont": "IBMPlexMono",
            "starshipPreset": "no-runtime-versions",
            "fontVersion": "v3.4.0"
        }
    },
    "forwardPorts": [5056, 7136, 8080], // 5056 and 7136 for development, 8080 when running in docker 
    "portsAttributes": {
        "7136": { "protocol": "https" }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-dotnettools.csharp",
                "ms-dotnettools.csdevkit",
                "kreativ-software.csharpextensions",
                "PKief.material-icon-theme",
                "dbaeumer.vscode-eslint",
                "ms-dotnettools.vscode-dotnet-runtime",
                "humao.rest-client",
                "ms-kubernetes-tools.vscode-kubernetes-tools"
            ]
        }
    },
    "postCreateCommand": "dotnet restore",
    "postStartCommand": "dotnet dev-certs https --trust",
    "runArgs": [
        // Mount the local kubeconfig file into the container
        "-v", "${env:HOME}/.kube/config:/home/user/.kube/config:ro"
    ],
    "containerEnv": {
        // Set the KUBECONFIG environment variable to point to the mounted file
        "KUBECONFIG": "/home/user/.kube/config"
    }
}